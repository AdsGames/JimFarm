  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "detail": "Run and build jim farm",
      "command": "cd build && cmake --build . && cd bin && ./JimFarm",
      "windows": {
        "command": "cd build && cmake --build . && cd bin && JimFarm.exe"
      },
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Configure",
      "type": "shell",
      "detail": "Run and build jim farm",
      "command": "rm -rf build && mkdir build && cd build && cmake ..",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
